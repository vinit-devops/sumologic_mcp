# Development Environment Configuration
# Copy this file to .env for development
# DO NOT commit real credentials to version control

# Sumo Logic API Configuration (Development/Testing)
# Use test credentials or a dedicated dev environment
SUMOLOGIC_ACCESS_ID=dev_access_id_here
SUMOLOGIC_ACCESS_KEY=dev_access_key_here
SUMOLOGIC_ENDPOINT=https://api.sumologic.com

# Development Server Configuration
SUMOLOGIC_TIMEOUT=60
SUMOLOGIC_MAX_RETRIES=3
SUMOLOGIC_RATE_LIMIT_DELAY=1.0
SUMOLOGIC_LOG_LEVEL=DEBUG
SUMOLOGIC_LOG_FORMAT=text
SUMOLOGIC_SERVER_NAME=sumologic-mcp-dev-server
SUMOLOGIC_SERVER_VERSION=0.1.0-dev

# Reference Implementation Compatibility
QUERY_TIMEOUT=300
MAX_RESULTS=1000
DEFAULT_VMWARE_SOURCE=otel/vmware

# Development-specific settings
SUMOLOGIC_DEV_MODE=true
SUMOLOGIC_MOCK_API=false

# Alternative reference environment variables (for testing compatibility)
# SUMO_ACCESS_ID=dev_access_id_here
# SUMO_ACCESS_KEY=dev_access_key_here
# SUMO_ENDPOINT=https://api.sumologic.com

# Testing Configuration
PYTEST_TIMEOUT=30
PYTEST_ASYNCIO_MODE=auto
COVERAGE_MIN_PERCENTAGE=80

# Pre-commit and Code Quality
BLACK_LINE_LENGTH=88
ISORT_PROFILE=black
MYPY_STRICT=true
FLAKE8_MAX_LINE_LENGTH=88