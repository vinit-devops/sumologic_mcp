# Sumo Logic MCP Server Configuration
# Copy this file to .env and fill in your actual credentials

# Required: Your Sumo Logic credentials
SUMOLOGIC_ACCESS_ID=your_access_id_here
SUMOLOGIC_ACCESS_KEY=your_access_key_here
SUMOLOGIC_ENDPOINT=https://api.sumologic.com

# Optional: Server configuration
SUMOLOGIC_TIMEOUT=60
SUMOLOGIC_MAX_RETRIES=3
SUMOLOGIC_RATE_LIMIT_DELAY=1.0
SUMOLOGIC_LOG_LEVEL=INFO
SUMOLOGIC_LOG_FORMAT=json

# Optional: Reference implementation compatibility
QUERY_TIMEOUT=300
MAX_RESULTS=1000
DEFAULT_VMWARE_SOURCE=otel/vmware

# Alternative reference environment variables (for backward compatibility)
# SUMO_ACCESS_ID=your_access_id_here
# SUMO_ACCESS_KEY=your_access_key_here  
# SUMO_ENDPOINT=https://api.sumologic.com